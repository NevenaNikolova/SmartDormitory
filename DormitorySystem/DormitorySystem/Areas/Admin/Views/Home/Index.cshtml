@model ListUsersViewModel

@{
    ViewData["Title"] = "Index";
}
<h2></h2>
<div class="text-right">
    <a asp-area="Admin" asp-controller="Home" asp-action="AllSensors"
       class="btn btn-info btn-lg active" role="button">View All Sensors</a>
</div>
<h2>Users</h2>

<table id="all-users" class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Details</th>
            <th>Roles</th>
            <th>Sensors</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@(user.UserName)</td>
                <td>@(user.Email)</td>
                <td>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Details" asp-route-id="@user.Id"
                       class="btn-sm btn-info active" role="button">Details</a>
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Roles" asp-route-id="@user.Id"
                       class="btn-sm btn-info active" role="button">Roles</a>
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Home" asp-action="ListUserSensors" asp-route-id="@user.Id"
                       class="btn-sm btn-info active" role="button">Sensors</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('#all-users').DataTable();
        });
    </script>
}

