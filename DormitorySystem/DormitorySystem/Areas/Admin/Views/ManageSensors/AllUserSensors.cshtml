@model IEnumerable<UserSensorViewModel>

<h2>All Sensors</h2>
<table id="user-sensors" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="col-md-2 text-center">User</th>
            <th class="col-md-2 text-center">Sensor Name</th>
            <th class="col-md-2 text-center">Sensor Type</th>
            <th class="col-md-2 text-center">Registered On</th>
            <th class="col-md-2 text-center">Modified On</th>
            <th class="col-md-2 text-center">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sensor in Model)
        {
        <tr>
            <td>@sensor.UserEmail</td>
            <td>@sensor.Name</td>
            <td>@sensor.SensorType</td>
            <td>@sensor.CreatedOn</td>
            <td>@sensor.ModifiedOn</td>
            <td>
                <a asp-area="Users" asp-controller="Sensors" asp-action="SensorDetails"
                   asp-route-userSensorid="@sensor.Id" class="btn btn-info active" role="button">
                    Details
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('#user-sensors').DataTable();
        });
    </script>
}

