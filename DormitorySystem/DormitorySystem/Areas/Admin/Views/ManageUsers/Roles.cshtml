@model UserWithRolesViewModel
@{
    ViewData["Title"] = "Roles";
}

<h2>Roles for user @Model.Email</h2>

<div>
    <a asp-area="Admin" asp-controller="ManageUsers" asp-action="AddToRole" asp-route-id="@Model.Id"
       class="btn btn-primary">Add To Role</a>
</div>

<br />
@if (!Model.Roles.Any())
{
    <h3>No roles for this user.</h3>
}
<ul>
    @foreach (var role in Model.Roles)
    {
        <li>@role</li>
    }
</ul>
<div>
    <a asp-action="Index">Back to List</a>
</div>

