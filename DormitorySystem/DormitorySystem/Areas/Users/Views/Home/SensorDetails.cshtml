@model UserSensorViewModel

<h2>Sensor Details</h2>
<div class="clearfix">
    <div class="col-md-6 text-center">
        <h3>Information</h3>
        <hr />
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Update Sensor Interval</th>
                    <td>@Model.UserPollingInterval</td>
                </tr>
                <tr>
                    <th>Latitude</th>
                    <td>@Model.Latitude</td>
                </tr>
                <tr>
                    <th>Longitude</th>
                    <td>@Model.Longitude</td>
                </tr>
                <tr>
                    <th>Send Email if Sensor Values are Out Of Range</th>
                    <td>@Html.DisplayFor(model => model.SendNotification)</td>
                </tr>
                <tr>
                    <th>This Sensor is Visible only for Me</th>
                    <td>@Html.DisplayFor(model => model.IsPrivate)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-6 text-center">
        <h3>Value</h3>
        <hr />
        <div class="chart" id="graph"></div>
    </div>
</div>

<div>
    <a asp-area="Users" asp-controller="Home" asp-action="EditSensor"
       asp-route-id="@Model.Id">
        Edit
    </a>
    <br />  
    <a asp-action="Index">Back to List</a>
</div>

    




